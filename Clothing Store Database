-- Create a clothing store database

CREATE TABLE clothing (id INTEGER PRIMARY KEY, name TEXT, size TEXT, gender TEXT, quantity INTEGER);

INSERT INTO clothing VALUES (1,"T Shirt", "Medium", "M", 2);
